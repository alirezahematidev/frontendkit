{
  "name": "frontendkit-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "workspaces": [
    "packages/*",
    "playground/**"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alirezahematidev/frontendkit.git"
  },
  "keywords": [
    "frontend"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "typecheck": "tsc -p scripts --noEmit && pnpm -r --parallel run typecheck",
    "docs": "vitepress dev docs",
    "build": "pnpm -r --filter='./packages/*' run build",
    "dev": "pnpm -r --parallel --filter='./packages/*' run dev",
    "playground": "pnpm -r --parallel --filter='./playground/**' run dev",
    "components:link": "pnpm -r --filter='./packages/components' run link-cli",
    "release": "pnpm build && tsx scripts/release.ts",
    "ci-publish": "tsx scripts/publishCI.ts"
  },
  "devDependencies": {
    "@babel/types": "^7.22.5",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/babel__core": "^7.20.1",
    "@types/babel__preset-env": "^7.9.2",
    "@types/babel__standalone": "^7.1.4",
    "@types/convert-source-map": "^2.0.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/debug": "^4.1.8",
    "@types/estree": "^1.0.1",
    "@types/etag": "^1.8.1",
    "@types/fs-extra": "^11.0.1",
    "@types/json-stable-stringify": "^1.0.34",
    "@types/less": "^3.0.3",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^18.17.3",
    "@types/picomatch": "^2.3.0",
    "@types/resolve": "^1.20.2",
    "@types/sass": "~1.43.1",
    "@types/stylus": "^0.48.38",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitejs/release-scripts": "^1.2.1",
    "conventional-changelog-cli": "^3.0.0",
    "eslint": "^8.46.0",
    "eslint-define-config": "^1.23.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-regexp": "^1.15.0",
    "execa": "^7.2.0",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "prettier": "3.0.1",
    "resolve": "^1.22.4",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.0",
    "tslib": "^2.6.1",
    "tsx": "^3.12.7",
    "typescript": "^5.0.2",
    "unbuild": "^1.2.1",
    "@frontendkit/components": "workspace:*",
    "@frontendkit/utilities": "workspace:*"
  },
  "packageManager": "pnpm@8.6.12",
  "pnpm": {
    "overrides": {
      "@frontendkit/components": "workspace:*",
      "@frontendkit/utilities": "workspace:*"
    },
    "packageExtensions": {
      "postcss-load-config": {
        "peerDependencies": {
          "postcss": "*"
        }
      }
    }
  }
}
